<% include ../partials/header %>
<div class = "container margin-top">
    <div class = "row"> 
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active"><a herf="#">Info 1</a></li>
                <li class="list-group-item"><a herf="#">Info 2</a></li>
                <li class="list-group-item"><a herf="#">Info 3</a></li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img src = "<%= campgrounds.image %>" class = "img img-fluid">
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a herf="#"><%= campgrounds.place %></a></h4>
                    <p>
                        <%= campgrounds.description %>
                    </p>
                </div>
            </div>
            <p></p>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= campgrounds._id %>/comment/new" class="btn btn-success text-right">Add new comment</a>  
                </div>
                <hr>
                <% campgrounds.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.name %></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                        
                    </div>
                <% }); %>
            </div>
            <h3>Comments</h3>
        </div>
    </div>
</div>
<% include ../partials/footer %>