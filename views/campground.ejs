<% include partials/header %>

<header class = 'jumbotron container margin-top'>
  <div class = "container">
      <h1><i class="fas fa-fire"></i>  Welcome to YelpCamp</h1>
      <p>
          Here are some hand picked campgrounds
      </p>
  </div>  
</header>
    <div class = "container">
        <div class="row flex">
            <% campgrounds.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6">     
                    <div class = 'rounded img-fluid'>
                        <img src = <%= camp.image %>>
                        <div>    
                            <div align = "center">
                                <h4><%= camp.place  %></h4>
                                <a class = "btn btn-primary" href = "/campgrounds/<%= camp._id %>">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include partials/new-campground %><br><br>

