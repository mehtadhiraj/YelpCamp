<% include partials/header %>

<header class = 'jumbotron container' style = margin-top:70px;>
  <div class = "container">
      <h1><i class="fas fa-fire"></i>  Welcome to YelpCamp</h1>
      <p>
          Here are some hand picked campgrounds
      </p>
  </div>  
</header>
    <div class = "container">
        <div class="row flex">
            <% campgrounds.forEach(function(camp){ %>
                <div class="col-md-4 col-sm-6">     
                    <div class = 'img-thumbnail rounded img-fluid'>
                        <img src = <%= camp.image %>>
                         <div class = 'caption'>
                            <h4><%= camp.place  %></h4>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

